import java.util.Random;

public class SpaceRandomiser {

	public void getNumAsteroids(int min, int max) {
		Random rng = new Random(201);
		int randomInt = min + rng.nextInt(max - min + 1);
		
		System.out.println("There are " + randomInt + " asteroids nearby");
	}
	
	public static void main(String[] args) {
		new SpaceRandomiser().getNumAsteroids(10,10);
		new SpaceRandomiser().getNumAsteroids(10,15);
		new SpaceRandomiser().getNumAsteroids(50, 500);
		new SpaceRandomiser().getNumAsteroids(0, 1000000);
	}

}
